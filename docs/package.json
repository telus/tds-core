{
  "name": "telus-thorium-docs",
  "version": "0.5.0",
  "description": "TELUS Design System documentation website",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/stylelint 'src/scss/**/*.scss' --syntax scss",
    "build": "npm run lint && npm run clean && mkdirp dist && npm run build:js && npm run build:html",
    "start": "export NODE_ENV=dev && wintersmith preview --config=config.json",
    "build:js": "webpack --config webpack.config.js",
    "build:html": "mkdirp dist && wintersmith build --config=./config.json",
    "clean": "rimraf dist/**/* && rimraf src/html/assets/bundles/**/*.{js,css}",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telusdigital/telus-thorium-core.git"
  },
  "author": "TELUS Digital",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/telusdigital/telus-thorium-core/issues"
  },
  "homepage": "https://github.com/telusdigital/telus-thorium-core#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.17.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "clean-css": "^3.4.10",
    "css-loader": "^0.25.0",
    "enzyme": "^2.5.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "fontmin": "^0.9.6",
    "jest": "^16.0.1",
    "marked": "~0.3.5",
    "mkdirp": "^0.5.1",
    "onchange": "^2.5.0",
    "postcss-loader": "^1.0.0",
    "react-addons-test-utils": "^15.3.2",
    "react-test-renderer": "^15.3.2",
    "rimraf": "^2.5.4",
    "node-sass": "^3.10.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "telus-thorium-core": "^0.5.0",
    "telus-thorium-enriched": "^0.5.0",
    "webpack": "^1.13.2",
    "wintersmith": "^2.3.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^.+\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
