{
  "name": "telus-thorium-docs",
  "version": "0.4.0",
  "description": "TELUS Thorium documentation website",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/stylelint 'src/assets/scss/**/*.scss' --syntax scss",
    "build": "npm run lint && npm run clean && mkdir -p dist && npm run build:css && npm run build:js && npm run build:html",
    "start": "export NODE_ENV=dev && wintersmith preview --config=config.json",
    "build:assets": "cp node_modules/telus-thorium-core/fonts/* src/assets/fonts/ && cp ../designs/thorium.sketch src/assets/downloads/thorium.sketch",
    "build:css": "npm run lint && node-sass --include-path src/assets/scss src/assets/scss/main.scss | postcss --use autoprefixer | cleancss > src/assets/css/styleguide.css",
    "build:js": "webpack --config webpack.config.js",
    "build:html": "mkdir -p dist && wintersmith build --config=./config.json",
    "clean": "rm -rf dist/**/* && rm -f src/assets/css/thorium.css && rm -f src/assets/css/styleguide.css",
    "watch:css": "onchange 'src/assets/scss/**/*.scss' '../core/scss/**/*.scss' -- npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telusdigital/telus-thorium-core.git"
  },
  "author": "TELUS Digital",
  "license": "",
  "bugs": {
    "url": "https://github.com/telusdigital/telus-thorium-core/issues"
  },
  "homepage": "https://github.com/telusdigital/telus-thorium-core#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "clean-css": "^3.4.10",
    "fontmin": "^0.9.6",
    "marked": "~0.3.5",
    "node-sass": "^3.4.2",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "telus-thorium-core": "^0.4.0",
    "telus-thorium-enriched": "^0.4.0",
    "webpack": "^1.13.2",
    "wintersmith": "^2.3.2"
  }
}
