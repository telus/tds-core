doctype html
block vars
  - var assetsUrl = (process.env.NODE_ENV === 'dev') ? locals.assetsUrl.dev : locals.assetsUrl.prod;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name

      link(rel='stylesheet', href='/assets/css/prism.css')
      link(rel='stylesheet', href='/assets/bundles/docs.css')

  body.ex-page
    header.docs-header
      div.container.container--limited-width.docs-header__container
        a.docs-header__logo(href="/")
          img(src="/assets/images/logo.png" alt="")

    main
      block content
        h2 Example Page

    script(src='/assets/js/styleguide.js')
    script(src='/assets/bundles/docs.js')
