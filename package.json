{
  "name": "telus-thorium-all",
  "version": "0.4.0",
  "description": "TELUS Thorium",
  "scripts": {
    "build": "npm run build:core && npm run build:enriched && npm run build:docs",
    "build:core": "cd core && npm run build",
    "build:docs": "cd docs && npm run build",
    "build:enriched": "cd enriched && npm run build",
    "start": "cd docs && npm run build:assets && npm run start",
    "install": "npm run install:core && npm run install:enriched && npm run install:docs",
    "install:core": "cd core && npm install",
    "install:docs": "cd docs && npm install",
    "install:enriched": "cd enriched && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telusdigital/telus-thorium-core.git"
  },
  "author": "TELUS Digital",
  "bugs": {
    "url": "https://github.com/telusdigital/telus-thorium-core/issues"
  }
}
