{
  "version": "2.0.0",
  "name": "@telus/tds-core",
  "description": "TELUS Design System core components",
  "homepage": "https://github.com/telus/tds-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/telus/tds-core.git"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/components/*",
    "shared/styles/*",
    "shared/utils/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run gitbook:install && lerna bootstrap && npm run build --all",
    "build": "node scripts/build.js",
    "build-docs:gitbook": "gitbook build guide",
    "build-docs:styleguide": "styleguidist build --config config/styleguide.config.js",
    "ci:build": "npm run build --all",
    "ci:build-docs:styleguide-staging": "STYLEGUIDIST_ENV=staging npm run build-docs:styleguide",
    "ci:build-docs:styleguide-production": "STYLEGUIDIST_ENV=production npm run build-docs:styleguide",
    "ci:build-docs": "npm-run-all --parallel ci:build-docs:styleguide-* build-docs:gitbook",
    "ci:test": "npm-run-all --parallel lint test",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "deploy:docs": "node ./scripts/deploy-docs.js",
    "deploy:package": "scripts/publish.sh",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "contributors:update": "node scripts/update-contributors.js",
    "dev": "styleguidist server --config config/styleguide.config.js",
    "dev:e2e": "STYLEGUIDIST_ENV=e2e styleguidist server --config config/styleguide.config.js",
    "gitbook": "gitbook serve guide",
    "gitbook:install": "gitbook install guide",
    "lerna:publish": "node scripts/publish.js",
    "lint:js": "eslint packages shared config docs scripts/*.js --ext '.js,.jsx' --config config/eslint.config.js --max-warnings 0 --fix",
    "lint:scss": "stylelint '{packages,shared}/**/*.scss' --config config/stylelint.config.js",
    "lint:ec": "echint",
    "lint:deps": "npx updated",
    "lint:md": "echo $PATH && npx remark --quiet --frail .",
    "lint:audit": "npm audit",
    "lint": "lerna clean --yes && npm-run-all --parallel lint:*",
    "precommit": "lint-staged && npm run test && npm run contributors:update",
    "prepare": "npm run gitbook:install",
    "prepr": "npm run test:e2e && node scripts/prePr.js --conventional-commits --yes",
    "prepush": "npm run ci:build && npm-run-all --parallel test lint build-docs:*",
    "scaffold": "node scripts/scaffold.js",
    "test:e2e": "node scripts/e2e.js",
    "test:u": "npm run test -u",
    "test:watch": "npm run test --watch",
    "test": "jest --config config/jest.config.js"
  },
  "keywords": [
    "design",
    "telus"
  ],
  "engines": {
    "node": ">=8"
  },
  "bugs": {
    "url": "https://github.com/telus/tds-core/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "@commitlint/prompt": "^7.0.0",
    "all-contributors-cli": "^5.0.0",
    "autoprefixer": "^9.0.0",
    "aws-sdk": "^2.114.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "case": "^1.5.5",
    "chalk": "^2.4.1",
    "chromedriver": "^2.35.0",
    "commitizen": "^3.0.0",
    "css-loader": "^1.0.0",
    "css-mediaquery": "^0.1.2",
    "css-modules-loader-core": "^1.1.0",
    "echint": "^4.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "file-loader": "^2.0.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.0",
    "jest-environment-enzyme": "^7.0.0",
    "jest-enzyme": "^7.0.0",
    "lerna": "^2.9.0",
    "lint-staged": "^8.0.0",
    "minimist": "^1.2.0",
    "nightwatch": "^0.9.19",
    "nightwatch-accessibility": "^1.6.0",
    "node-emoji": "^1.8.1",
    "node-resemble-js": "^0.2.0",
    "node-sass": "^4.7.2",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.1",
    "postcss-cli": "^6.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-helmet": "^5.2.0",
    "react-styleguidist": "^7.0.3",
    "react-test-renderer": "^16.0.0",
    "request": "^2.87.0",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.1",
    "s3-website": "^3.1.2",
    "sass-loader": "^7.0.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.1.0",
    "stylelint-scss": "^3.0.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "yargs": "^12.0.1"
  },
  "dependencies": {
    "prop-types": "^15.5.10"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --ext '.js,.jsx' --config config/eslint.config.js --quiet --fix",
        "git add"
      ],
      "*.scss": "stylelint --config config/stylelint.config.js",
      "*.md": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/*.{png,jpeg,jpg}"
    ]
  },
  "echint": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/**.svg",
      "**/**.log",
      "**/__snapshots__/**",
      "**/**.tgz",
      "guide/components/**",
      "guide/_book/**",
      "build/**",
      "styleguide/**",
      "**/reports/*.xml",
      "**/**.png"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run test && npm run contributors:update",
      "pre-push": "npm run ci:build && npm-run-all --parallel test lint build-docs:*"
    }
  }
}
